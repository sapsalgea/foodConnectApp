<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingStart="5dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ImageChatOthersProFileImage"
        android:layout_gravity="top"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:src="@tools:sample/backgrounds/scenic" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ImageChatOthersNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="아이디" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <ImageView
                android:id="@+id/ImageChatOthersImage"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:maxWidth="100dp"
                android:maxHeight="150dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/ImageChatOthersTimeStamp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom|end"
                android:paddingStart="5dp"
                tools:text="20:21" />

            <TextView
                android:id="@+id/ImageReadMembersOthersMessage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:gravity="bottom"
                android:textColor="#FBC312"
                android:textSize="10dp"
                tools:text="1" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>