<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chatRoomSubscriptionUserProfileImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:src="@drawable/com_facebook_profile_picture_blank_square" />

    <TextView
        android:id="@+id/chatRoomSubscriptionUserListId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="3.3"
        android:paddingStart="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="아이디" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_weight="3.5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/SubscriptionCancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#C8C8C8"
            android:text="X" />

        <Button
            android:id="@+id/SubscriptionOK"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/app_theme_color"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="O" />

        <ImageButton
            android:id="@+id/userInfomation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:backgroundTint="@color/com_facebook_blue"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_assignment_ind_24" />

    </LinearLayout>

</LinearLayout>