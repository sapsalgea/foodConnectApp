<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <!--focus 라고 쓴 것은 엑티비티 시작하자마자 edittext 포커싱안되게 설정-->





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">



        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_weight="1"
                    android:id="@+id/nicNameModifyEt"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <Button
                    android:backgroundTint="@color/com_facebook_blue"
                    android:id="@+id/duplicationCheckBtn"
                    android:text="닉네임\n중복확인"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <TextView
                android:id="@+id/change_ok_alert_tv"
                android:layout_marginTop="25dp"
                android:text="닉네임 중복확인이 필요합니다."
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>





        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:backgroundTint="@color/com_facebook_blue"
                android:id="@+id/nicnameModifyCancelBtn"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="취소"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <Button
                android:backgroundTint="@color/com_facebook_blue"
                android:id="@+id/nicnameModifyOkBtn"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="확인"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>




    </LinearLayout>






</LinearLayout>