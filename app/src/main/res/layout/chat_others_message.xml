<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingStart="5dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chatOthersImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:src="@tools:sample/backgrounds/scenic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chatOthersNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="아이디" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom">

            <TextView
                android:id="@+id/chatOthersMessageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_others_message_background"
                android:elevation="30dp"
                android:gravity="center_vertical"
                android:maxWidth="280dp"
                android:outlineProvider="none"
                android:padding="10dp"
                android:textColor="@color/black"
                tools:text="" />

            <TextView
                android:id="@+id/chatOthersTimeStamp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom|end"
                android:paddingStart="5dp"
                tools:text="20:21" />
            <TextView
                android:id="@+id/readMembersOthersMessage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:gravity="bottom"
                android:textColor="#FBC312"
                android:textSize="10dp"
                tools:text="1" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>