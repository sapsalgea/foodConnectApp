<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!--소셜로그인 버튼-->
    <style name="mainActivityLoginButton">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!-- 텍스트 사이즈 -->
    <dimen name="mainActivityLoginButtonTextSize">20sp</dimen>

    <!--마진 크기-->
    <dimen name="mainActivityLoginButtonMarginSide">40dp</dimen>
    <dimen name="mainActivityLoginButtonMarginTomBottom">5dp</dimen>

    <style name="MainToolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">#09F6C7</item> <!-- Toolbar의 배경색-->
        <item name="colorPrimary">#09F6C7</item> <!-- Toolbar의 타이틀 텍스트-->
        <item name="titleTextColor">@color/black</item>
        <item name="android:textStyle">bold</item><!-- Toolbar의 서브타이틀 텍스트-->
    </style>

    <!--플로팅 버튼 모양 크기-->
    <dimen name="design_fab_size_normal" tools:override="true">58dp</dimen>
    <dimen name="design_fab_image_size" tools:override="true">40dp</dimen>

    <!--메인 프래그먼트 아이템 모집중 스타일-->
    <style name="style_room_status_recruitment">
        <item name="android:background">@drawable/main_fragment_rooms_status_recruitment</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:text">모집중</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <!--메인 프래그먼트 아이템 임박시간 스타일-->
    <style name="style_room_status_imminent">
        <item name="android:background">@drawable/main_fragment_rooms_status_imminent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:text">%d시간</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
    </style>
    <!--메인 프래그먼트 아이템 마감 스타일-->
    <style name="style_room_status_deadline">
        <item name="android:background">@drawable/main_fragment_rooms_status_deadline</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:text">마감</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <!--방만들기 공통 마진-->
    <style name="create_room_margin">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <!--방만들기 인풋텍스트 인풋레이아웃 스타일-->
    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/edit_text_color_out_line</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">#09C59F</item>
        <item name="android:textCursorDrawable">@color/app_theme_color</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <!--방만들기 오토컴플리트텍스트뷰 인풋레이아웃 스타일-->
    <style name="LoginTextInputLayoutStyleDrop" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/edit_text_color_out_line</item>
        <item name="hintTextColor">#09C59F</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textCursorDrawable">@color/app_theme_color</item>
    </style>

    <style name="create_room_activity_text_view_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>
    <!--        구분선-->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <!--    방 정보 액티비티  카테고리 마진-->
    <style name="room_information_category_style">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <!--    방 정보 액티비티 카테고리별 텍스트 뷰 마진-->
    <style name="room_information_textview_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="room_search_view_style" parent="Widget.AppCompat.SearchView">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

